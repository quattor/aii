Test the yum_setup
---
---
^mkdir -p /var/tmp/aii/yum/repos$
^cat <<end_of_yum_conf > /var/tmp/aii/yum/yum.conf$
^\[main\]$
^cachedir=/var/cache/yum/\\\$basearch/\\\$releasever$
^clean_dependencies_on_remove=1$
^debuglevel=2$
^exactarch=1$
^exclude=a b$
^gpgcheck=1$
^installonly_limit=3$
^keepcache=0$
^logfile=/var/log/yum.log$
^obsoletes=0$
^plugins=1$
^reposdir=/var/tmp/aii/yum/repos$
^retries=40$
^end_of_yum_conf$
^cat <<end_of_repos > /var/tmp/aii/yum/repos/aii.repo$
^\[repo0\]$
^name=repo0$
^baseurl=http://www.example.com$
^skip_if_unavailable=1$
^enabled=1$
^gpgcheck=0$
^repo_gpgcheck=0$
^gpgcakey=file:///super/ca/key$
^gpgkey=file:///path/to/key$
^\s{4}https://somewhere/very/very/far$
^\s{4}ftp://because/ftp/and/security/go/well/together$
^\[repo1\]$
^name=repo1$
^baseurl=http://www.example1.com$
^skip_if_unavailable=1$
^exclude=woo hoo\*$
^enabled=1$
^gpgcheck=0$
^includepkgs=everything else$
^end_of_repos$
